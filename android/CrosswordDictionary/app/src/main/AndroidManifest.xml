<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jamieholdstock.crossword">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activities.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.tutorial.basics.BasicsActivity" />
        <activity android:name=".activities.tutorial.TutorialMenuActivity" />
        <activity android:name=".activities.tutorial.DevicesMenuActivity" />
        <activity android:name=".activities.tutorial.devices.AnagramActivity" />
        <activity android:name=".activities.tutorial.devices.AcrosticActivity" />
        <activity android:name=".activities.SearchActivity" />
        <activity android:name=".activities.ClueSolverActivity" />

        <service
            android:name=".service.ClueSolverService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>
