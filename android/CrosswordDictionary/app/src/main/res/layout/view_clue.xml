<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/clue_front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/indicator_background"
        android:orientation="vertical"
        android:paddingBottom="10sp"
        android:paddingTop="5sp">

        <TextView
            android:id="@+id/clue_text_front"
            style="@style/Clue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consumes a portion meat stew (4)"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                style="@style/RevealSolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REVEAL SOLUTION"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clue_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/indicator_background"
        android:orientation="vertical"
        android:paddingBottom="10sp"
        android:paddingTop="5sp"
        android:visibility="gone">

        <TextView
            android:id="@+id/clue2"
            style="@style/Clue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consumes a portion meat stew (4)"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/solution_text"
                style="@style/Solution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EATS"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="normal|bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
