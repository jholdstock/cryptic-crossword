<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Nephritis"
    tools:context=".activities.ClueSolverActivity"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:theme="@style/MyEditText"
        android:layout_height="wrap_content"
        android:id="@+id/search_box"
        android:textColor="@android:color/white"
        android:hint="Clue..."
        android:selectAllOnFocus="true"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:paddingBottom="10dp" />

    <Button
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:id="@+id/solve_clue_button"
        android:text="Solve"
        style="@style/MenuButton"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/results_panel">

            <com.jamieholdstock.crossword.views.ClueView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:clue="Example (4)"
                app:solution="Example" />

            <com.jamieholdstock.crossword.views.NetworkWarningView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>

