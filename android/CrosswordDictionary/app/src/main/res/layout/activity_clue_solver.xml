<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Nephritis"
    tools:context=".activities.ClueSolverActivity"
    android:orientation="vertical">

    <EditText
        android:theme="@style/MyEditText"
        android:layout_height="wrap_content"
        android:id="@+id/search_box"
        android:textColor="@android:color/white"
        android:hint="Clue..."
        android:selectAllOnFocus="true"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:padding="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solve_clue_button"
        android:text="Solve"
        style="@style/MenuButton"
        android:layout_gravity="center" />

    <com.jamieholdstock.crossword.views.ClueView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clue="Consumes (4)"
        app:solution="EATS"
        android:id="@+id/clue_view" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_border"
        android:id="@+id/error_panel">

        <ImageView
            android:layout_width="71dp"
            android:layout_height="89dp"
            app:srcCompat="@mipmap/warning"
            android:id="@+id/imageView4"
            android:cropToPadding="false"
            android:adjustViewBounds="false" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Error!"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical|center" />

            <TextView
                android:text="Check internet connection and try again."
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/White"
                android:textSize="14dp"
                android:gravity="center_vertical|center" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

