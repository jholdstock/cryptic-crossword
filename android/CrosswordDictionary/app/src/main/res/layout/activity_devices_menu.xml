<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.tutorial.TutorialMenuActivity"
    android:orientation="vertical"
    android:background="@color/Amethyst"
    android:gravity="center">

    <TextView
        android:text="Wordplay devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="normal|bold"
        android:textColor="@color/White"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anagrams"
        android:id="@+id/anagrams_button"
        android:background="@drawable/white_border"
        android:textColor="@color/White"
        android:layout_marginBottom="20dp"
        android:minWidth="120dip"
        android:typeface="sans"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hidden words"
        android:id="@+id/hidden_words_button"
        android:background="@drawable/white_border"
        android:textColor="@color/White"
        android:layout_marginBottom="20dp"
        android:minWidth="120dip"
        android:typeface="sans"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acrostics"
        android:id="@+id/acrostics_button"
        android:background="@drawable/white_border"
        android:textColor="@color/White"
        android:layout_marginBottom="20dp"
        android:minWidth="120dip"
        android:typeface="sans"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

</LinearLayout>
