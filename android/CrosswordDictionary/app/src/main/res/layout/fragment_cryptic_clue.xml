<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_crossword_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@color/Amethyst"
        android:gravity="center">

        <TextView
            android:text="Here is a cryptic version of the same clue:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TutorialParagraph"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_border">

            <TextView
                android:text="Consumes a portion of meat stew (4)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Clue" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="Solution:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Solution" />

                <TextView
                    android:text="EATS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    style="@style/Solution" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="Typical cryptic clues will either start or end with a literal definition of the solution. In this case it's 'Consumes'"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TutorialParagraph"/>

        <TextView
            android:text="The rest of the clue 'a portion of meat stew' is a wordplay puzzle. The solution is literally a portion of the letters 'm EATS tew'"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TutorialParagraph" />

        <TextView
            android:text="Cryptic clues can be trickier to solve, but because two mini-clues both to point the solution EATS, you can be quite sure that it is correct."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TutorialParagraph" />
    </LinearLayout>

</ScrollView>
