<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_crossword_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/Amethyst"
        android:gravity="center">

        <com.jamieholdstock.crossword.views.ClueView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:clue="[Biting] heads off [t]arantulas, [e]ating [e]ven [t]iny [h]airs (5)"
            app:solution="TEETH"/>

        <com.jamieholdstock.crossword.views.ClueView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:clue="[Teams] beginners [s]tuck [i]n [d]epressing [e]arly slump (5)"
            app:solution="SIDES"/>

        <com.jamieholdstock.crossword.views.ClueView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:clue="Initially [a]miable [p]erson [e]ats [primate] (3)"
            app:solution="APE"/>

        <com.jamieholdstock.crossword.views.ClueView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:clue="[S]ome [U]RLs [r]ecommended [f]or beginners to [explore online] (4)"
            app:solution="SURF"/>

    </LinearLayout>

</ScrollView>
