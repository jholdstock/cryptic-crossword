                        android:text="Oxygen" />

                    <View style="@style/TutorialTableDivider" />
                    <TextView
                        style="@style/TutorialTableCell"
                        android:text="O" />
                </TableRow>

                <TableRow style="@style/TutorialTableRow_Dark">
                    <TextView
                        style="@style/TutorialTableCell"
                        android:text="Aluminium" />

                    <View style="@style/TutorialTableDivider" />
                    <TextView
                        style="@style/TutorialTableCell"
                        android:text="Al" />
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/TutorialTableCell"
                        android:text="Iron" />

                    <View style="@style/TutorialTableDivider" />
                    <TextView
                        style="@style/TutorialTableCell"
                        android:text="Fe" />
                </TableRow>

            </TableLayout>

            <TableLayout style="@style/TutorialTableLayout">
                <TableRow>
                    <TextView
                        style="@style/TutorialTableHeader"
                        android:text="Element"
                        android:textAlignment="center" />

                    <View style="@style/TutorialTableDivider" />
                    <TextView
                        style="@style/TutorialTableHeader"
                        android:text="Letter"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow style="@style/TutorialTableRow_Dark">
                    <TextView
