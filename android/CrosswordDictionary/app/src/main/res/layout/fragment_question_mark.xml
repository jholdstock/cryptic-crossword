<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_crossword_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@color/Amethyst"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_border">

            <TextView
                android:text="Two in chemical water? (9)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Clue" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="Solution:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Solution" />

                <TextView
                    android:text="SUBSCRIPT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    style="@style/Solution" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="Punctuation in cryptic clues is usually added to distract the solver so can often be ignored. One exception to this rule is the question mark. A question mark often means that you have a clue which demands particular lateral thought, or a quirky interpretation of the words. In this example the clue is referring to 'chemical water' - usually written as Hâ‚‚O containing a subscript 'two'"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TutorialParagraph"/>

        <TextView
            android:text="Many setters like to include humourous puns in their question mark clues:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TutorialParagraph"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_border">

            <TextView
                android:text="Dollars for quarters? (4)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Clue"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="Solution:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Solution"/>

                <TextView
                    android:text="RENT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    style="@style/Solution" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_border">

            <TextView
                android:text="Spirited community? (5,4)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Clue" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="Solution:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Solution" />

                <TextView
                    android:text="GHOST TOWN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    style="@style/Solution" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
