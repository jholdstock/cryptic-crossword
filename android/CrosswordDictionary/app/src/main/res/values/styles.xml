<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Alizarin</item>
        <item name="colorPrimaryDark">@color/Black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Clue" parent="Theme.AppCompat.Light">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Blackish</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="RevealSolution" parent="Theme.AppCompat.Light">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="Solution" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/Blackish</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="TutorialParagraph" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="TutorialList" parent="TutorialParagraph">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/LightGray</item>
        <item name="colorControlActivated">@color/LightGray</item>
        <item name="android:textColorHint">@color/LightGray</item>
        <item name="android:inputType">textNoSuggestions|textVisiblePassword</item>
    </style>

    <style name="MenuButton" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/white_border</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:minWidth">110dip</item>
        <item name="android:minHeight">54dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
